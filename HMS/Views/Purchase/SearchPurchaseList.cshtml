
@model List<HMS.Models.Sp_get_Purchase_Result>
@{
    int i = 0;
    Layout = null;
}

@if (Model != null && Model.Count() > 0)
{
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            @*<h5 class="card-header">Master Reffer Doctor List</h5>*@
            <div class="card-body">

                <div class="table-responsive" style=" background: #bec4d2">
                    <table class="table table-striped table-bordered first" id="dataTable">
                        <thead>
                            <tr>
                                <th>S.No.</th>
                                <th>VN</th>
                                <th>Date</th>
                                <th>Invoice No</th>
                                <th>Invoice Date</th>
                                <th>Supplier Name</th>
                                <th>Supplier Contact</th>
                                <th>Total Amount</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(i=i+1)</td>
                                    <td>@item.VN</td>
                                    <td>@item.Date</td>
                                    <td>@item.InvoiceNo</td>
                                    <td>@item.InvoiceDate</td>
                                    <td>@item.Suppliername</td>
                                    <td>@item.Contact</td>
                                    <td>@item.TotalAmount</td>


                                    <td>
                                        <a href="@Url.Action("Purchase","Purchase",new {id=item.Id })" class="btn btn-info btn-sm"><i class="fas fa-edit"></i></a>
                                        <a class="btn btn-danger" style="margin-left:10px" href="@Url.Action("DeletePurchase","Purchase",new {id=item.Id })" onclick="return confirm('Do You Want To Delete This Record ?')">
                                            <i class="fas fa-trash"></i>
                                        </a>

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

}



