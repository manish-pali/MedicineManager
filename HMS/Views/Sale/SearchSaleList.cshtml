
@model List<HMS.Models.Sp_get_Sale1_Result>
@{
    int i = 0;
    Layout = null;
}

@if (Model != null && Model.Count() > 0)
{
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            @*<h5 class="card-header">Master Reffer Doctor List</h5>*@
            <div class="card-body">

                <div class="table-responsive" style=" background: #bec4d2">
                    <table class="table table-striped table-bordered first" id="dataTable">
                        <thead>
                            <tr>
                                <th>S.No.</th>
                                <th>VN</th>
                                <th>Date</th>
                                <th>Customer Name</th>
                                <th>Address</th>
                                <th>Total Amount</th>
                                <th>Doctor</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(i=i+1)</td>
                                    <td>@item.VN</td>
                                    <td>@item.Date</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.Address</td>
                                    <td>@item.TotalAmount</td>
                                    <td>@item.DoctorName</td>
                                    
                                    <td>
                                        <a href="@Url.Action("SaleLogin","Home",new {id=item.Id })" class="btn btn-info btn-sm"><i class="fas fa-edit"></i></a>


                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

}



