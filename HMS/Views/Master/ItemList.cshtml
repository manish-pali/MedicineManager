
@model List<HMS.Models.Sp_get_Master_Item_Result>
@{
    int i = 0;
    Layout = null;
}

@if (Model != null && Model.Count() > 0)
{
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12" >
        <div class="card">
            @*<h5 class="card-header">Master Reffer Doctor List</h5>*@
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered first" id="dataTable">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>Item Name</th>
                                <th>Unit</th>
                                <th>Pack</th>
                                <th>MRP</th>
                                <th>Dis</th>
                                <th>Rate</th>
                                <th>Company</th>
                                <th>Reorder Number</th>
                                <th>Category</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(i=i+1)
                                    </td>
                                    <td>
                                        @item.ItemName
                                    </td>
                                    <td>
                                        @item.Unit
                                    </td>
                                    <td>
                                        @item.Pack
                                    </td>
                                    <td>
                                        @item.MRP
                                    </td>
                                    <td>
                                        @item.Disc
                                    </td>
                                    <td>
                                        @item.Rate
                                    </td>
                                    <td>
                                        @item.CompanyName
                                    </td>
                                    <td>
                                        @item.Reorder
                                    </td>
                                    <td>
                                        @item.Category
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" href="@Url.Action("Item","Master",new {id=item.Id } )">
                                            <i class="fas fa-pencil-alt">Edit</i>
                                        </a>
                                        <a class="btn btn-danger" style="margin-left:10px" href="@Url.Action("DeleteItem","Master",new {id=item.Id })" onclick="return confirm('Do You Want To Delete This Record ?')">
                                            <i>Delete</i>
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

}



