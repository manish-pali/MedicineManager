@model List<HMS.Models.Sp_Get_Master_Customer_Result>
@{
    int i = 0;
    Layout = null;
}

@if (Model != null && Model.Count() > 0)
{
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12" style="position:absolute">
        <div class="card">
            @*<h5 class="card-header">Master Reffer Doctor List</h5>*@
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered first" id="dataTable">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>Customer Name</th>
                                <th>Address</th>
                                <th>Contact</th>
                                <th>Email</th>
                                <th>GSTIN</th>
                                <th>State</th>
                                <th>State Code</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(i=i+1)
                                    </td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.Address</td>
                                    <td>@item.Contact</td>
                                    <td>@item.EMail</td>
                                    <td>@item.GSTIN</td>
                                    <td>@item.State</td>
                                    <td>@item.StateCode</td>

                                    <td>
                                        <a class="btn btn-primary" href="@Url.Action("Customer","Master",new {id=item.Id } )">
                                            <i class="fas fa-pencil-alt">Edit</i>
                                        </a>
                                        <a class="btn btn-danger" style="margin-left:10px" href="@Url.Action("DeleteCustomer","Master",new {id=item.Id })" onclick="return confirm('Do You Want To Delete This Record ?')">
                                            <i>Delete</i>
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

}




