<script>
    document.getElementById("Disc").addEventListener("blur", CalcRate);
    document.getElementById("MRP").addEventListener("blur", CalcPCSRate);
    function CalcRate() {
        var MRP = document.getElementById("MRP").value;
        var Disc = document.getElementById("Disc").value;
        var Discount = MRP * Disc;
        var Rate = Discount / 100;
        var amount = MRP - Rate;
        document.getElementById("Rate").value = amount;
    }
    
    function CalcPCSRate() {
        var MRP = document.getElementById("MRP").value;
        var Pack = document.getElementById("Pack").value;
        var PCSRate = MRP / Pack;
        document.getElementById("PCSRate").value = PCSRate;
    }
</script>