</head>


<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="container-fluid">
                <div class=" card-info ">
                    <div id="booking" class="section">
                        <div class="section-center">
                            @using (Html.BeginForm("Item", "Master", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", id = "form" }))
                            {
                                <div class="heading" style="background-color: none; margin-top: -25%;">
                                    Master Item
                                </div>
                                <div class="container">
                                    <div class="row">
                                        <div class="booking-form booking-form-item">
                                            <form>
                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">Company Name</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.DropDownListFor(model => model.CompanyId, HMS.Models.Method.GetMasterCompany(), "Select Company ", new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.CompanyId, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">Category Name</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.DropDownListFor(model => model.CategoryId, HMS.Models.Method.GetMasterCategory(), "Select Category ", new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">Item Name</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @placeholder = "Enter Item Name" } })
                                                            @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">UnitId</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.DropDownListFor(model => model.UnitId, HMS.Models.Method.GetMasterUnit(), "Select Unit ", new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.UnitId, "", new { @class = "text-danger" })
                                                        </div>

                                                    </div>


                                                </div>
                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">pack</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.EditorFor(model => model.Pack, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @placeholder = "Enter Pack", onkeypress = "return isNumberKey(event)" } })
                                                            @Html.ValidationMessageFor(model => model.Pack, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">MRP</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.EditorFor(model => model.MRP, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @placeholder = "Enter MRP", onkeypress = "return isNumberKey(event)" } })
                                                            @Html.ValidationMessageFor(model => model.MRP, "", new { @class = "text-danger" })
                                                        </div>

                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">PCSRate</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.EditorFor(model => model.PCSRate, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @placeholder = "Enter PCS Rate", onkeypress = "return isNumberKey(event)", @readonly = "true" } })
                                                            @Html.ValidationMessageFor(model => model.PCSRate, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">Discount</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.EditorFor(model => model.Disc, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @placeholder = "Enter Discount", onkeypress = "return isNumberKey(event)" } })
                                                            @Html.ValidationMessageFor(model => model.Disc, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                </div>

                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">Rate</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @placeholder = "Enter Rate", @readonly = "true" } })
                                                            @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">Tax</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.EditorFor(model => model.Tax, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @placeholder = "Enter Tax", onkeypress = "return isNumberKey(event)" } })
                                                            @Html.ValidationMessageFor(model => model.Tax, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">OpeningQty</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.EditorFor(model => model.OpeningQty, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @placeholder = "Enter Opening Qty", onkeypress = "return isNumberKey(event)" } })
                                                            @Html.ValidationMessageFor(model => model.OpeningQty, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">Batch</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.EditorFor(model => model.Batch, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @placeholder = "Enter Batch" } })
                                                            @Html.ValidationMessageFor(model => model.Batch, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                </div>


                                                <div class="row">
                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">Expiry</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.EditorFor(model => model.Expiry, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @placeholder = "Enter Expiry" } })
                                                            @Html.ValidationMessageFor(model => model.Expiry, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="col-md-3">
                                                        <div class="form-group2">
                                                            <span class="form-label">Reorder</span>
                                                            @*<input class="form-control" type="text" placeholder="City or airport">*@
                                                            @Html.EditorFor(model => model.Reorder, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @placeholder = "Enter Reorder", onkeypress = "return isNumberKey(event)" } })
                                                            @Html.ValidationMessageFor(model => model.Reorder, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <div class="form-btn">
                                                            <button type="submit" class="submit-btn">Sumbit</button>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <div class="form-btn1">
                                                            <button type="submit" class="submit-btn1" style="margin-top:19%" href="@Url.Action("Item","Master", new {Id=0}) ">Refresh</button>
                                                        </div>

                                                    </div>

                                                </div>
                                                
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            }

                        </div>
                    </div>
                    @{ Html.RenderAction("ItemList", "Master");}
                </div>
            </div>
    </section>
</div>


